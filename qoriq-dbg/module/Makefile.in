KSRC=@KSRC@
ATSRC=@abs_top_srcdir@
ABDIR=@abs_builddir@
ASDIR=@abs_srcdir@
SDIR= @srcdir@

# QorIQ DebugFS Driver Module
MODULE_NAME = qoriq-dbg

ifneq ($(KERNELRELEASE),)

obj-m	:= $(MODULE_NAME).o
$(MODULE_NAME)-objs :=  \
			ccsr_fman.o \
			ccsr_qman.o \
			dbg_cpu.o \
			dbg_perfmon.o \
			dbg_pmr_table.o \
			dbg_spr.o \
			dbg_spr_table.o \
			dcsr_corenet.o \
			dcsr_ddr.o \
			dcsr_dpaa.o \
			dcsr_epu.o \
			dcsr_nal.o \
			dcsr_npc.o \
			dcsr_npc_trace.o \
			dcsr_nxc.o \
			dcsr_ocn.o \
			dcsr_rcpm.o \
			qoriq_dbg.o
EXTRA_CFLAGS += -I$(ATSRC)/qoriq-common

else


KERNEL_SRC = $(KSRC)
ARCH = powerpc

# These options used for a native build
KERNEL_ARGS := M=$(ABDIR) ARCH=$(ARCH)
INSTALL_ARGS := INSTALL_MOD_PATH=$(SYSROOT)

# These options used for a cross build
#PWD := $(shell pwd)
#CROSS_COMPILE := powerpc-linux-gnu-
#KERNEL_ARGS := M=$(PWD) ARCH=$(ARCH) CROSS_COMPILE=$(CROSS_COMPILE)
#INSTALL_ARGS := INSTALL_MOD_PATH=$(ROOTFS_PATH)

.PHONY: build install clean

all: build

build: 
	make -C  $(KERNEL_SRC) $(KERNEL_ARGS) modules

install:
	make -C  $(KERNEL_SRC) $(KERNEL_ARGS) $(INSTALL_ARGS) modules_install

clean:
	make -C  $(KERNEL_SRC) $(KERNEL_ARGS) clean
	rm -f modules.order

distclean:
	rm Makefile

distdir:
	@echo Nothing to be done for \'dist\'

check:
	@echo Nothing to be done for \'check\'

endif
